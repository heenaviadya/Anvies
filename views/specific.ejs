<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
 
  <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
   <link rel='stylesheet' href='/stylesheets/specific.css' />
   <title>Specific Page</title>
</head>

<body>
   <!-- nav bar begins here -->
   <nav>
      <div class="menu-icon">
         <span class="fas fa-bars"></span>
      </div>
      <div class="logo">
         Anvies
      </div>
      <div class="nav-items">
         <li><a href="#">Movies</a></li>
         <li><a href="#">TV Shows</a></li>
         <li><a href="#">Animes</a></li>
         <li><a href="#">Documentries</a></li>
         <li><a href="#">Watchlist</a></li>
      </div>
      <div class="search-icon">
         <span class="fas fa-search"></span>
      </div>

      <form action="#">
         <input type="search" class="search-data" placeholder="Search" required>
         <button type="submit" class="fas fa-search"></button>
      </form>
   </nav>
   <!-- nav bar ends here -->


   <div class="contents">
      <div class="row"></div>

     
      <div class="child"><img src="<%= movie.poster%>" alt="" width="320" height="400"></div>
      <div class=" child">
         <table class="table table-sm" style="margin-bottom: 50px;color:  #FFFCF2;">
            <tbody>
               <tr>
                  <th>Title</th>
                  <td>
                     <%= movie.title%>
                  </td>
               </tr>

               <tr>
                  <th>Description</th>
                  <td>
                     <%= movie.description%>
                  </td>
               </tr>

               <tr>
                  <th>Genre</th>
                  <td>
                     <%= movie.genre%>
                  </td>
               </tr>

               <tr>
                  <th>Release Date</th>
                  <td>
                     <%= movie.releaseDate%>
                  </td>
               </tr>
               <tr>
                  <th>Time-Length</th>
                  <td>
                     <%=movie.timeLength %>
                  </td>
               </tr>

               <tr>
                  <th>Cast</th>
                  <td>
                     <%= movie.cast %>
                  </td>
               </tr>

               <tr>
                  <th>Ratings</th>
                  <td>
                  </td>
               </tr>
            </tbody>
         </table>
      </div>

 <h1>User Reviews</h1>
      <a href="/create-review/<%= movie._id %>" class="btn ">
    <button >Write a Review</button>
    </a>
    

    
      <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
          <div class="col-md- col-lg-10">
            <div class="card text-dark">
               <% reviewList.forEach((review,review_id)=>{ %>
              <div class="card-body p-4">
            
                <div class="d-flex flex-start">
                  <div>
                    <h6 class="fw-bold mb-1"><%= review.userName %></h6>
                    <div class="d-flex align-items-center mb-3">
                      <p class="mb-0">
                       Ratings:<%= review.rating %>
                      
                      </p>
                     
                    </div>
                    <p class="mb-0">
                       <%= review.review %>
                    </p>
                  </div>
                </div>
              </div>
    
              <hr class="my-0" />
              <% }) %>


     
     
</body>

</html>